<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_space"
        android:layout_marginRight="@dimen/half_space"
        android:layout_marginTop="@dimen/space"
        android:background="@color/status_up"
        android:padding="1dp">

        <RelativeLayout
            android:id="@+id/rlInnerBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:paddingLeft="@dimen/half_space"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/ivHeart"
                    android:paddingRight="@dimen/half_space"
                    android:paddingEnd="@dimen/half_space"
                    android:layout_width="16dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_favorite_red_24dp" />

                <RelativeLayout
                    android:id="@+id/rlPreSale"
                    android:paddingRight="@dimen/half_space"
                    android:paddingEnd="@dimen/half_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingRight="@dimen/item_indicator_padding"
                        android:paddingLeft="@dimen/item_indicator_padding"
                        android:background="@color/item_indicator_background"
                        android:fontFamily="sans-serif-light"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pre-sale"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/item_indicator_text_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlNew"
                    android:paddingRight="4dp"
                    android:paddingEnd="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingRight="@dimen/item_indicator_padding"
                        android:paddingLeft="@dimen/item_indicator_padding"
                        android:background="@color/item_indicator_background"
                        android:fontFamily="sans-serif-light"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="new"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/item_indicator_text_size"/>
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/space"
                android:paddingTop="@dimen/space">

                <TextView
                    android:id="@+id/tvPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="22"
                    android:textColor="@android:color/black"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPrimary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/september"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlEnd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/space"
                android:paddingTop="@dimen/space"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="end"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

            </RelativeLayout>

            <View
                android:id="@+id/vSeparator"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlDate"
                android:background="@android:color/darker_gray">

            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/vSeparator"
                android:padding="@dimen/space"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBSIDIAN"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDescript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:maxLines="2"
                    android:textColor="@android:color/black"
                    android:fontFamily="sans-serif-light"
                    android:text="A decentralized music platform built on Ethereum"
                    android:textSize="14sp" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>
