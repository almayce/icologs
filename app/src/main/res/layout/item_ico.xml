<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rlBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space"
        android:layout_marginLeft="@dimen/half_space"
        android:layout_marginRight="@dimen/half_space"
        android:background="@color/status_up"
        android:padding="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="@dimen/space"
            android:paddingBottom="@dimen/space"
            >

            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/rlDate"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="36sp" />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tvSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPrimary"
                    android:text="@string/september"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:id="@+id/rlEnd"
                android:layout_width="100dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="end"
                    android:textSize="30sp"/>

            </RelativeLayout>

            <View
                android:id="@+id/vSeparator"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/rlDate"
                android:background="@android:color/darker_gray"
                android:layout_width="1dp"
                android:layout_height="60dp">

            </View>

            <RelativeLayout
                android:padding="@dimen/space"
                android:layout_toRightOf="@+id/vSeparator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBSIDIAN"/>

                <TextView
                    android:textSize="14sp"
                    android:text="A decentralized music platform built on Ethereum"
                    android:layout_below="@+id/tvTitle"
                    android:id="@+id/tvDescript"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"/>
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>
